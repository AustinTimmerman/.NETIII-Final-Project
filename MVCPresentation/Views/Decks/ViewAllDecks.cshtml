@model MVCPresentation.Models.DeckViewModel
@{
    ViewBag.Title = "ViewAllDecks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Decks</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Deck Name</th>
            <th scope="col">Created By</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataObjects.DeckVM deck in Model.Decks)
        {
            <tr>
                <td>@Html.ActionLink(deck.DeckName, "ViewDeckDetails", new { deckID = deck.DeckID, deckName = deck.DeckName})</td>
                <td>@deck.Username</td>
            </tr>
        }
    </tbody>
</table>

<div class="pager">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("ViewAllDecks", new { page = x }))
</div>